            <div class="menu-list" id="menu-list">
                <NavLink href="/">STRONA GŁÓWNA</NavLink>
                <NavLink href="/cennik">USŁUGI</NavLink>
                <NavLink href="/szkolenia">SZKOLENIA</NavLink>
